{% extends 'admin/base.html.twig' %}

{% set entity_name = 'Hermano' %}
{% set route_prefix = 'admin_hermano' %}
{% set action = 'show' %}
{% set actions = {
'create': true,
'edit': true,
'list': true,
} %}
{% set entity = hermano %}

{% block page_header %}
    {% embed 'admin/layout/crud/_page_header.html.twig' %}
        {% block page_heading %}{{ entity_name }}{% endblock %}
        {% block breadcrumb %}
            {{ include('admin/layout/crud/_breadcrumb.html.twig') }}
        {% endblock breadcrumb %}
    {% endembed %}
{% endblock page_header %}

{% block page_content_nav %}
    {{ include('admin/layout/crud/_page_content_navbar.html.twig') }}
{% endblock page_content_nav %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">

            {% embed 'admin/layout/crud/_block.html.twig' %}

                {% block block_header_title %}{{ entity_name }}{% endblock %}

                {% block block_content %}
                    <table class="table table-bordered table-striped">
                        <tbody>
                        <tr>
                            <th style="width: 130px">Id</th>
                            <td>{{ hermano.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ hermano.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Apellidos</th>
                            <td>{{ hermano.apellidos }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ hermano.email }}</td>
                        </tr>
                        <tr>
                            <th>Tel√©fono</th>
                            <td>{{ hermano.telefono }}</td>
                        </tr>
                        <tr>
                            <th>Privilegios</th>
                            <td>{{ hermano.privilegios|join(', ') }}</td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>{% if hermano.created %}{{ hermano.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Updated</th>
                            <td>{% if hermano.updated %}{{ hermano.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                        </tr>
                        </tbody>
                    </table>
                {% endblock %}

                {% block block_footer %}{% endblock %}

            {% endembed %}
        </div>
    </div>
{% endblock %}
